<view class='table'>
<button class='title_btn'>个人资料</button>
<view class='tr'>
<view class='td h'>
<text>姓名</text>
</view>
<view class='td l'>
<input class='input_item' type='text' bindinput='bindUserName' placeholder='请输入姓名'></input>
</view>
</view>

<view class='tr'>
<view class='td h'>
<text>性别</text>
</view>
<view class='td l'>
<radio-group class='input_item' bindchange="bindUserSex">
<radio value='女'>女</radio>
<radio value='男'>男</radio>
</radio-group>
</view>
</view>

<view class='tr'>
<view class='td h'>
<text>电话</text>
</view>
<view class='td l'>
<input class='input_item' type='number' bindinput='bindUserPhone' placeholder='请输入电话'/>
</view>
</view>

<view>
<button class='next_btn' bindtap='nextFunction'>下一步</button>
</view>

</view>